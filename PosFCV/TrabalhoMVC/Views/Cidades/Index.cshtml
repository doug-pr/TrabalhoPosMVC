@model IEnumerable<TrabalhoMVC.Models.Cidade>

@{
    ViewBag.Title = "Index";
}

<h2>Consulta de Cidades</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estado.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo }, new { @class = "btn btn-primary"} ) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.Codigo }, new { @class = "btn btn-info"} ) 
            @Html.ActionLink("Excluir", "Delete", new { id=item.Codigo }, new { @class = "btn btn-danger"} )
        </td>
    </tr>
}

</table>
